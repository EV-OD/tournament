rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // NOTE: The following collections are now write-protected from clients
    // because all mutations happen via server-side endpoints (Admin SDK):
    // - POST /api/payment/verify  (confirms payments, books slots)
    // - POST /api/bookings        (create bookings)
    // - POST /api/slots/*         (hold/reserve/release/generate)
    // - POST /api/venues          (create venues + initialize venueSlots)
    // - PATCH /api/venues/{id}    (manager/admin venue edits)
    // - POST /api/venues/{id}/reviews (create/update reviews + comments)
    // - POST /api/users/upsert    (safe user doc upserts)
    // Server endpoints use the Admin SDK and therefore bypass these rules.

    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Users collection
    match /users/{userId} {
      // Reads allowed for authenticated users (to get role, etc.)
      allow read: if isAuthenticated();
      // All writes to user documents must go through server-side endpoints (admin SDK).
      allow write: if false;
    }
    
    // Venues collection
    // Reads are public, but all writes (including manager edits) must go through
    // server-side endpoints using the Admin SDK. Deny client-side writes.
    match /venues/{venueId} {
      allow read: if true;
      allow write: if false;
    }
    
    // VenueSlots collection (Critical data)
    // Explicitly deny client-side writes. All modifications must go through Server Actions.
    match /venueSlots/{venueId} {
      allow read: if true;
      allow write: if false; 
    }
    
    // Slots collection - client should not write directly. Server endpoints must perform slot mutations.
    match /slots/{slotId} {
      allow read: if true;
      allow write: if false;
    }
    
    // Bookings collection
    // Deny client-side creation/updates. All bookings must go through Server Actions.
    match /bookings/{bookingId} {
      allow read: if isAuthenticated() && (
        resource.data.userId == request.auth.uid || isAdmin()
      );
      allow write: if false;
    }

    // Reviews collection - server-only writes
    // Reviews and aggregated venue comments should be written via backend endpoints
    // so we can enforce uniqueness, abuse protection, and correct aggregation.
    match /reviews/{reviewId} {
      allow read: if true;
      allow write: if false;
    }

    // Venue comments subcollection (used for public display)
    match /venues/{venueId}/comments/{commentId} {
      allow read: if true;
      // All comment writes must be performed server-side to ensure consistency
      allow write: if false;
    }

    // Catch-all: deny client-side writes everywhere by default. Keep reads
    // permissive where explicitly allowed above. Server/Admin SDK operations
    // are not affected by security rules.
    match /{document=**} {
      allow write: if false;
    }
  }
}
